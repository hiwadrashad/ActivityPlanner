@page "/appointmentoverview"
@using ActivityPlannerBlazor.Client.Interfaces;
@using ActivityPlannerBlazor.Shared.DTOS;
@using Microsoft.AspNetCore.Components;
@using System;
@using System.Collections.Generic;
@using System.Linq;
@using System.Threading.Tasks;
@*<html>*@
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        @@import url('https://fonts.googleapis.com/css?family=Roboto|Sriracha&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            /*            display: flex;
            justify-content: center;
            align-items: center;*/
            height: 100vh;
            font-family: "Roboto", arial, sans-serif;
            color: #222;
        }

        #login-container {
            margin: 1em;
            height: 400px;
            width: 350px;
            padding: 20px;
            border-radius: 5px;
            background: #fffffb;
            position: relative;
            float: left;
            box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
            vertical-align: top;
        }

            #login-container .profile-img {
                height: 100px;
                width: 100px;
                background: url('https://images.unsplash.com/photo-1504933350103-e840ede978d4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=564&q=80');
                background-size: cover;
                background-position: center;
                position: absolute;
                top: -25px;
                left: -25px;
                border-radius: 50%;
                box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
            }

            #login-container h1 {
                font-family: 'Sriracha', arial, sans-serif !important;
                text-align: center;
                margin-bottom: 20px;
                color: #ffc145;
            }

        #login-container {
            font-size: small;
        }

            #login-container .description {
                margin-bottom: 20px;
            }

            #login-container .social {
                display: flex;
                justify-content: space-between;
                align-items: center;
                width: calc(100% - 40px);
                margin: 0 auto;
            }

                #login-container .social a {
                    text-align: center;
                    border: solid 2px #ff6b6c;
                    width: 75px;
                    padding: 5px 0;
                    border-radius: 5px;
                }

                    #login-container .social a:hover {
                        background: #ff6b6c;
                        color: white;
                        cursor: pointer;
                    }

            #login-container button {
                width: 80%;
                height: 80px;
                font-size: 2rem;
                margin: 30px 10% 0 10%;
                color: #fffffb;
                border: none;
                box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
                border-radius: 5px;
                background: linear-gradient(45deg, #ff6b6c, #ffc145, #ffc145, #ff6b6c);
                background-size: 300% 300%;
                outline: none;
                transition: all 200ms ease-in-out;
            }

                #login-container button:hover {
                    box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.5);
                    -webkit-animation: gradientBG 1.5s ease-in-out forwards;
                    animation: gradientBG 1.5s ease-in-out forwards;
                    cursor: pointer;
                }

                #login-container button:active {
                    box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.5);
                }

            #login-container footer {
                display: flex;
                justify-content: space-between;
                align-items: center;
                background: #5b5f97;
                color: white;
                width: 100%;
                position: absolute;
                bottom: 0;
                height: 30px;
                padding: 0 20px;
                margin-left: -32px;
                border-bottom-left-radius: 5px;
                border-bottom-right-radius: 5px;
            }

                #login-container footer div {
                    display: flex;
                }

                    #login-container footer div .fa-heart {
                        color: #ff6b6c;
                    }

                    #login-container footer div p:first-child {
                        margin-right: 10px;
                        border-right: 4px solid white;
                        padding-right: 10px;
                    }

        @@-webkit-keyframes gradientBG {
            0% {
                background-position: 0% 50%;
            }

            100% {
                background-position: 100% 50%;
            }
        }

        @@keyframes gradientBG {
            0% {
                background-position: 0% 50%;
            }

            100% {
                background-position: 100% 50%;
            }
        }



        body {
            background-image: url('/Cards/Images/indie-background.png');
            background-size: cover;
            background-attachment: fixed;
            overflow-x: hidden;
        }

        .sidenav {
            overflow: hidden;
            opacity: 0.85;
            margin-left: 15px;
            margin-top: 50px;
            height: 500px !important;
            width: 200px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 20px;
        }

            .sidenav a {
                padding: 10px 10px 10px 10px;
                text-decoration: none;
                display: block;
            }

                /*        .underline {
            color: #818181;
            font-size: medium;
            border-bottom: 1px solid grey;
        }*/

                .sidenav a:hover {
                    color: #f1f1f1;
                }

        .main {
            font-size: 28px; /* Increased text to enable scrolling */
            padding: 0px 10px;
            float: left !important;
            position: absolute;
        }

        .logo {
            font-size: large;
        }


        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');

        @@media screen and (max-height: 450px) {
            .sidenav {
                padding-top: 15px;
            }

                .sidenav a {
                    font-size: 18px;
                }
        }

        h3 {
            color: white !important;
            margin-top: 50px;
            margin-left: 20px;
        }

        h1 {
            margin-left: 20px;
        }

        .subscribe-form {
            transform: scale(0.8);
        }

        .copyrights {
            color: #818181;
            font-size: medium;
            width: 150px;
            margin-left: 20px;
            margin-top: 50px;
        }

        @@media screen and (min-width: 1367px) {
            .sidenav {
                overflow-x: hidden;
                margin-top: 80px;
            }

            .main {
                width: 1600px !important;
                margin-left: 100px;
                margin-top: 50px;
            }
        }

        @@media screen and (max-width: 1367px) {
            .sidenav {
                overflow-x: hidden;
                margin-top: 80px;
            }

            .main {
                width: 1400px !important;
                margin-left: 90px;
                margin-top: 30px;
            }

            #login-container {
                transform: scale(0.9);
            }
        }

        #login-container {
        }

        #content {
            float: left !important;
            width: 1000px !important;
        }

        .wrapper {
            float: left !important;
            width: 1000px !important;
        }

        .EditButton {
            transform: scale(0.4) translateX(-270px);
        }

        .DeleteButton {
            transform: scale(0.4) translate(20px,-280px);
        }

        .DetailsButton {
            transform: scale(0.4) translate(300px, -560px);
        }
    </style>
</head>

@if (CurrentOrganizer.Acquaintances == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <body>
        <div class="sidenav">
            <h1><a href="#" class="logo">Activity Planner</a></h1>
            <a class="underline" href="/attendeeoverview"><span class="fa fa-user mr-3"></span>Acquaintances</a>
            <a class="underline" href="/appointmentoverview"><span class="fa fa-sticky-note mr-3"></span>Appointments</a>
            <h3 class="h6 mb-3">Subscribe for newsletter</h3>
            <form action="#" class="subscribe-form">
                <div class="form-group d-flex">
                    <div class="icon"><span class="icon-paper-plane"></span></div>
                    <input type="text" class="form-control" placeholder="Enter Email Address">
                </div>
            </form>
            <div class="copyrights">
                Copyright ©2021 All rights reserved
            </div>
        </div>

        <div class="main">

            @foreach (var item in CurrentOrganizer.Appointments)
            {
                <div id="login-container">
                    <div class="profile-img"></div>
                    <h1>
                        @item.Name
                    </h1>
                    <div class="description">
                        @item.Description
                    </div>
                    <div class="social">
                        <a>@item.ApproximateDate</a>
                        <a>@item.Category</a>
                    </div>
                    <a href=""></a>
                    <button onclick="window.location.href='/appointmentedit/@item.id'" class="m-3 EditButton">Edit</button>
                    <button  onclick="window.location.href='/appointmentdelete/@item.id'" class="m-3 DeleteButton">Delete</button>
                    <button onclick="window.location.href='/appointmentdetails/@item.id'" class="m-3 DetailsButton">Details</button>
                    <footer>
                        <div class="likes">
                            <p><i class=''></i></p>
                            <p></p>
                        </div>
                        <div class="projects">
                            <p></p>
                            <p></p>
                        </div>
                    </footer>
                </div>
            }
        </div>


    </body>
}
@*</html>*@


