@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager
@*<div class="sidebar">
        <NavMenu />
    </div>*@
<style>
    .changetopbar {
        height: 50px;
        position: sticky !important;
        z-index: 9999;
        background-color: transparent !important;
    }

    .changefontcolor {
        color: gray !important;
        font-size: medium;
    }



    @@media screen and (max-width: 1367px) {

        .title {
            color: white !important;
            font-size: large;
            transform: translateX(-1100px);
        }
    }

    @@media screen and (min-width: 1367px) {

        .title {
            color: white !important;
            font-size: large;
            transform: translateX(-1600px);
        }
    }

    .logo-image {
        transform: scale(2);
    }
</style>
<head>
    <link href="/FrontPageTwo/css/styles.css" rel="stylesheet">
</head>

<div class="main">
    <AuthorizeView>
        <NotAuthorized>

            <nav class="navbar navbar-expand-lg fixed-top navbar-light">
                <div class="container">


                    <a class="navbar-brand logo-image" href="#"><img src="/FrontPageTwo/images/TransparantAPIcon.png" alt="alternative"></a>

                    <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link page-scroll active" href="authentication/login">Login <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link page-scroll" href="authentication/register">Register</a>
                            </li>
                        </ul>
                        <span class="nav-item app-store-icons">
                            <a href="#">
                                <i class="fab fa-apple"></i>
                            </a>
                            <a href="#">
                                <i class="fab fa-android"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </nav>
        </NotAuthorized>
        <Authorized>

            <nav class="navbar navbar-expand-lg fixed-top navbar-light">
                <div class="container">


                    <a class="navbar-brand logo-image" href="#"><img src="/FrontPageTwo/images/TransparantAPIcon.png" alt="alternative"></a>

                    <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link page-scroll active" href="authentication/profile"> Hello, @context.User.Identity.Name! <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link page-scroll" @onclick="BeginSignOut">Log out</a>
                            </li>
                        </ul>
                        <span class="nav-item app-store-icons">
                            <a href="#">
                                <i class="fab fa-apple"></i>
                            </a>
                            <a href="#">
                                <i class="fab fa-android"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </nav>
        </Authorized>
    </AuthorizeView>
    @*<div class="top-row px-4 auth changetopbar">
            <LoginDisplay />
            <strong class="title">Activity Planner</strong>
        </div>*@

    <div class="content px-4">
        @Body
    </div>
</div>
@code
{

    @code{
        private async Task BeginSignOut(MouseEventArgs args)
        {
            await SignOutManager.SetSignOutState();
            Navigation.NavigateTo("authentication/logout");
        }
    }

}
